<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.music.dao.CollectMapper">
    <resultMap id="BaseResultMap" type="com.hust.music.domain.Collect" >
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="TINYINT"/>
        <result column="song_id" property="songId" jdbcType="INTEGER"/>
        <result column="song_list_id" property="songListId" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="tbl_name">
        collect
    </sql>

    <sql id="Base_Column">
        id,user_id,type,song_id,song_list_id,create_time
    </sql>

    <insert id="add">
        insert into <include refid="tbl_name"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="songId != null">
                song_id,
            </if>
            <if test="songListId != null">
                song_list_id,
            </if>
            create_time,
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="type != null">
                #{type},
            </if>
            <if test="songId != null">
                #{songId},
            </if>
            <if test="songListId != null">
                #{songListId},
            </if>
            now(),
        </trim>
    </insert>
    <delete id="delete">
        delete from <include refid="tbl_name"></include>
        where user_id = #{userId} and song_id = #{songId}
    </delete>

    <select id="collectOfUserId" resultType="com.hust.music.domain.Collect">
        select <include refid="Base_Column"></include>
        from <include refid="tbl_name"></include>
        where user_id = #{userId}
    </select>
    <select id="getCollectByUserIdAndSongId" resultType="java.lang.Integer">
        select count(*)
        from <include refid="tbl_name"></include>
        where user_id = #{userId} and song_id = #{songId}
    </select>

</mapper>
