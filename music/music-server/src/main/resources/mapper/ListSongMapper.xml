<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.music.dao.ListSongMapper">
    <resultMap id="BaseResultMap" type="com.hust.music.domain.ListSong">
        <id column="id" property="id" jdbcType="INTEGER"></id>
        <result column="song_id" property="songId" jdbcType="INTEGER"></result>
        <result column="song_list_id" property="songListId" jdbcType="INTEGER"></result>
    </resultMap>


    <sql id="Base_Column_List">
        id,song_id,song_list_id
    </sql>

    <sql id="tbl_name">
        list_song
    </sql>
    <insert id="insert">
        insert into
        <include refid="tbl_name"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="songId != null">
                song_id,
            </if>
            <if test="songListId != null">
                song_list_id,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="songId != null">
                #{songId},
            </if>
            <if test="songListId != null">
                #{songListId},
            </if>
        </trim>
    </insert>

    <update id="update">
        update
        <include refid="tbl_name"></include>
        <set>
            <if test="songId != null">
               song_id = #{songId},
            </if>
            <if test="songListId != null">
               song_list_id = #{songListId},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="delete">
        delete from <include refid="tbl_name"></include>
        where song_id = #{songId}
        and song_list_id = #{songListId}
    </delete>


    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where id = #{id}
    </select>

    <select id="listSongOfSongListId" resultType="com.hust.music.domain.ListSong">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where song_list_id = #{songListId}
    </select>

    <select id="allListSong" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
    </select>


</mapper>
