<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.music.dao.SongMapper">
    <resultMap id="BaseResultMap" type="com.hust.music.domain.Song">
        <id column="id" property="id" jdbcType="INTEGER"></id>
        <result column="singer_id" property="singerId" jdbcType="INTEGER"></result>
        <result column="name" property="name" jdbcType="VARCHAR"></result>
        <result column="introduction" property="introduction" jdbcType="VARCHAR"></result>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"></result>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"></result>
        <result column="pic" property="pic" jdbcType="VARCHAR"></result>
        <result column="lyric" property="lyric" jdbcType="VARCHAR"></result>
        <result column="url" property="url" jdbcType="VARCHAR"></result>
        <result column="mvurl" property="mvurl" jdbcType="VARCHAR"></result>
    </resultMap>


    <sql id="Base_Column_List">
        id,singer_id,name,introduction,create_time,update_time,pic,lyric,url,mvurl
    </sql>

    <sql id="tbl_name">
        song
    </sql>
    <insert id="insert">
        insert into
        <include refid="tbl_name"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="singerId != null">
                singer_id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="introduction != null">
                introduction,
            </if>
                create_time,update_time,
            <if test="pic != null">
                pic,
            </if>
            <if test="lyric != null">
                lyric,
            </if>
            <if test="url != null">
                url,
            </if>
            <if test="mvurl != null">
                mvurl,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="singerId != null">
                #{singerId},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="introduction != null">
                #{introduction},
            </if>
            now(),now(),
            <if test="pic != null">
                #{pic},
            </if>
            <if test="lyric != null">
                #{lyric},
            </if>
            <if test="url != null">
                #{url},
            </if>
            <if test="mvurl != null">
                #{mvurl},
            </if>
        </trim>
    </insert>

    <update id="update">
        update
        <include refid="tbl_name"></include>
        <set>
            <if test="singerId != null">
                singer_id = #{singerId},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="introduction != null">
                introduction = #{introduction},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="pic != null">
                pic = #{pic},
            </if>
            <if test="lyric != null">
                lyric = #{lyric},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="mvurl != null">
                mvurl = #{mvurl},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from
        <include refid="tbl_name"></include>
        where id = #{id}
    </delete>

    <select id="selectByPrimaryKey" resultType="com.hust.music.domain.Song">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where id = #{id}
    </select>

    <select id="allSong" resultType="com.hust.music.domain.Song">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
    </select>

    <select id="songOfName" resultType="com.hust.music.domain.Song">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where name = #{name}
    </select>

    <select id="likeSongOfName" resultType="com.hust.music.domain.Song">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where name like #{name}
    </select>

    <select id="songOfSingerId" resultType="com.hust.music.domain.Song">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where singer_id = #{singerId}
    </select>

</mapper>