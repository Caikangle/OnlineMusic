<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.music.dao.SongListMapper">
    <resultMap id="BaseResultMap" type="com.hust.music.domain.SongList">
        <id column="id" property="id" jdbcType="INTEGER"></id>
        <result column="title" property="title" jdbcType="VARCHAR"></result>
        <result column="pic" property="pic" jdbcType="VARCHAR"></result>
        <result column="introduction" property="introduction" jdbcType="VARCHAR"></result>
        <result column="style" property="style" jdbcType="VARCHAR"></result>
    </resultMap>


    <sql id="Base_Column_List">
        id,title,pic,introduction,style
    </sql>

    <sql id="tbl_name">
        song_list
    </sql>
    <insert id="insert">
        insert into
        <include refid="tbl_name"></include>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="title != null">
                title,
            </if>
            <if test="pic != null">
                pic,
            </if>
            <if test="introduction != null">
                introduction,
            </if>
            <if test="style != null">
                style,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="title != null">
                #{title},
            </if>
            <if test="pic != null">
                #{pic},
            </if>
            <if test="introduction != null">
                #{introduction},
            </if>
            <if test="style != null">
                #{style},
            </if>
        </trim>
    </insert>

    <update id="update">
        update
        <include refid="tbl_name"></include>
        <set>
            <if test="id != null">
               id = #{id},
            </if>
            <if test="title != null">
               title = #{title},
            </if>
            <if test="pic != null">
               pic =  #{pic},
            </if>
            <if test="introduction != null">
               introduction = #{introduction},
            </if>
            <if test="style != null">
               style = #{style},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from
        <include refid="tbl_name"></include>
        where id = #{id}
    </delete>

    <select id="selectByPrimaryKey" resultType="com.hust.music.domain.SongList">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where id = #{id}
    </select>

    <select id="allSongList" resultType="com.hust.music.domain.SongList">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
    </select>

    <select id="songListOfTitle" resultType="com.hust.music.domain.SongList">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where  title = #{title}
    </select>

    <select id="likeStyle" resultType="com.hust.music.domain.SongList">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where style like #{style}
    </select>

    <select id="likeTitle" resultType="com.hust.music.domain.SongList">
        select <include refid="Base_Column_List"></include>
        from <include refid="tbl_name"></include>
        where title like #{title}
    </select>


</mapper>
