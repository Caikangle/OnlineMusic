<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.music.dao.AdminMapper">
    <resultMap id="BaseResultMap" type="com.hust.music.domain.Admin" >
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="verifyPassword" resultType="int">
        select count(*) from admin where name = #{username} and password = #{password}
    </select>
</mapper>